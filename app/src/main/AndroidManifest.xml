<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.cmu.hcii.sugilite">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INJECT_EVENTS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".SugiliteData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:name">
        <activity
            android:name=".ui.main.SugiliteMainActivity"
            android:label="Sugilite"
            android:noHistory="true"
            android:theme="@style/AppTheme"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".accessibility_service.SugiliteAccessibilityService"
            android:label="@string/accessibility_service_name"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
        </service>

<!--        <service android:name=".verbal_instruction_demo.speech.GoogleCloudSpeechService"/>-->


        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
            android:parentActivityName=".ui.main.SugiliteMainActivity"
            tools:node="merge">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.cmu.hcii.sugilite.ui.main.SugiliteMainActivity" />
        </activity>
        <activity
            android:name=".recording.RecordingPopupSubMenuActivity"
            android:noHistory="true"
            tools:node="merge" />
        <activity
            android:name=".ui.LocalScriptDetailActivity"
            tools:node="merge" />
        <activity
            android:name=".ui.RemoteScriptDetailActivity"
            tools:node="merge" />
        <activity
            android:name=".sharing.SharingScriptReviewActivity"
            tools:node="merge" />
        <activity
            android:name=".ui.ScriptDebuggingActivity"
            tools:node="merge" />

        <activity
            android:name=".communication.SugiliteCommunicationActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoDisplay"
            tools:node="merge">
            <intent-filter>
                <action android:name="edu.cmu.hcii.sugilite.COMMUNICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".communication.SugiliteKeyboardCommunicationAdapterActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoDisplay"
            tools:node="merge">
            <intent-filter>
                <action android:name="edu.cmu.hcii.sugilite.KEYBOARD_ADAPTER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".communication.SugiliteEventBroadcastingActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoDisplay"
            tools:node="merge">
            <intent-filter>
                <action android:name="edu.cmu.hcii.sugilite.BROADCASTING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Broadcast reciever that provides the functionalities of SugiliteCommunicationActivity using broadcasts as the communication medium -->
        <receiver android:name=".communication.SugiliteCommunicationBroadcastReciever">
            <intent-filter>
                <action android:name="edu.cmu.hcii.sugilite.SUGILITE_SERVICES_BR" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.ScriptSourceActivity" />
        <activity android:name=".pumice.ui.PumiceMainActivity" />
        <activity
            android:name=".pumice.ui.PumiceDialogActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE" />
        </intent>
    </queries>
</manifest>